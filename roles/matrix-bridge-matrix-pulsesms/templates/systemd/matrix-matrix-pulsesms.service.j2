#jinja2: lstrip_blocks: "True"
[Unit]
Description=Matrix matrix pulsesms bridge
{% for service in matrix_matrix_pulsesms_systemd_required_services_list %}
Requires={{ service }}
After={{ service }}
{% endfor %}
{% for service in matrix_matrix_pulsesms_systemd_wanted_services_list %}
Wants={{ service }}
{% endfor %}
DefaultDependencies=no

[Service]
Type=simple
Environment="HOME={{ matrix_systemd_unit_home_path }}"
ExecStartPre=-{{ matrix_host_command_sh }} -c '{{ matrix_host_command_docker }} kill matrix-matrix-pulsesms 2>/dev/null'
ExecStartPre=-{{ matrix_host_command_sh }} -c '{{ matrix_host_command_docker }} rm matrix-matrix-pulsesms 2>/dev/null'

# Intentional delay, so that the homeserver (we likely depend on) can manage to start.
ExecStartPre={{ matrix_host_command_sleep }} 5

ExecStart={{ matrix_host_command_docker }} run --rm --name matrix-matrix-pulsesms \
			--log-driver=none \
			--user={{ matrix_user_uid }}:{{ matrix_user_gid }} \
			--cap-drop=ALL \
			--network={{ matrix_docker_network }} \
			-v {{ matrix_matrix_pulsesms_config_path }}:/config:z \
			-v {{ matrix_matrix_pulsesms_data_path }}:/data:z \
			--workdir=/data \
			{% for arg in matrix_matrix_pulsesms_container_extra_arguments %}
			{{ arg }} \
			{% endfor %}
			{{ matrix_matrix_pulsesms_docker_image }} \
			/usr/bin/matrix-pulsesms -c /config/config.yaml -r /config/registration.yaml

ExecStop=-{{ matrix_host_command_sh }} -c '{{ matrix_host_command_docker }} kill matrix-matrix-pulsesms 2>/dev/null'
ExecStop=-{{ matrix_host_command_sh }} -c '{{ matrix_host_command_docker }} rm matrix-matrix-pulsesms 2>/dev/null'
Restart=always
RestartSec=30
SyslogIdentifier=matrix-matrix-pulsesms

[Install]
WantedBy=multi-user.target
